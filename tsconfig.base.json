{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2021", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@js-to-lua/convert": ["libs/convert/src/index.ts"],
      "@js-to-lua/fast-follow-commands": [
        "libs/fast-follow-commands/src/index.ts"
      ],
      "@js-to-lua/handler-utils": ["libs/handler-utils/src/index.ts"],
      "@js-to-lua/lua-conversion-utils": [
        "libs/lua-conversion-utils/src/index.ts"
      ],
      "@js-to-lua/lua-print": ["libs/lua-print/src/index.ts"],
      "@js-to-lua/lua-types": ["libs/lua-types/src/index.ts"],
      "@js-to-lua/lua-types/test-utils": [
        "libs/lua-types/test-utils/src/index.ts"
      ],
      "@js-to-lua/plugin-utils": ["libs/plugin-utils/src/index.ts"],
      "@js-to-lua/plugins-jest-globals-e2e": [
        "libs/plugins/jest-globals/e2e/src/index.ts"
      ],
      "@js-to-lua/plugins/jest-globals": [
        "libs/plugins/jest-globals/src/index.ts"
      ],
      "@js-to-lua/plugins/known-imports": [
        "libs/plugins/known-imports/src/index.ts"
      ],
      "@js-to-lua/post-process": ["libs/post-process/src/index.ts"],
      "@js-to-lua/shared-utils": ["libs/shared-utils/src/index.ts"],
      "@js-to-lua/upstream-utils": ["libs/upstream-utils/src/index.ts"],
      "@roblox/diff-tool": ["libs/diff-tool/src/index.ts"],
      "@roblox/release-tracker": ["libs/release-tracker/src/index.ts"],
      "@roblox/version-manager": ["libs/version-manager/src/index.ts"]
    },
    "strict": true
  },
  "exclude": ["node_modules", "tmp"]
}
